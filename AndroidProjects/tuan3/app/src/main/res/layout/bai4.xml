<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Chọn bài toán"
        android:textColor="@color/black"
        android:textSize="30dp"
        >
    </TextView>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=" Giai PT bậc hai"
        android:textSize="20dp"
        android:textStyle="normal"></CheckBox>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=" Kiểm tra số hoàn hảo"
        android:textSize="20dp"
        android:textStyle="normal"></CheckBox>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=" Nối và đảo ngược xâu"
        android:textSize="20dp"
        android:textStyle="normal"></CheckBox>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=" Gửi tin nhắn và hình ảnh"
        android:textSize="20dp"
        android:textStyle="normal"></CheckBox>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=" Ưng dụng xem ảnh"
        android:textSize="20dp"
        android:textStyle="normal"></CheckBox>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=" Thực hiện cuộc gọi"
        android:textSize="20dp"
        android:textStyle="normal"></CheckBox>
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/xam"
        android:text="ok"
        android:textColor="@color/black"></Button>
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="200dp"
        android:text="exit"
        android:backgroundTint="@color/xam"
        android:textColor="@color/black"></Button>

</LinearLayout>